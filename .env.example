# Environment variables for Stori Transaction Processor
# Copy this file to .env and modify values as needed

# Application Configuration
ENVIRONMENT=local
DATA_PATH=./testdata

# Database Configuration (LOCAL DEVELOPMENT ONLY)
# AWS Lambda processes in memory without database
DB_DRIVER=sqlite

# Email Configuration (Required)
TO_ADDRESS=customer@example.com
TO_NAME=Account Holder
FROM_ADDRESS=example@mail.com
FROM_NAME=Stori Account Summary

# Email Mode Selection: development (MailHog), gmail (Gmail SMTP), production (AWS SES)
EMAIL_MODE=development

# MailHog Configuration (development mode)
MAILHOG_HOST=mailhog
MAILHOG_PORT=1025

# Gmail Configuration (gmail mode)
GMAIL_HOST=smtp.gmail.com
GMAIL_PORT=587
# GMAIL_USERNAME=your-email@gmail.com  
# GMAIL_PASSWORD=your-app-password

# AWS SES Configuration (production mode)
SES_FROM_EMAIL=example@mail.com
SES_REGION=us-west-2

# Security Configuration
MAX_FILE_SIZE=10485760
ALLOWED_EXTENSIONS=csv
MAX_TRANSACTIONS=100000
MAX_AMOUNT_LIMIT=1000000.00
PROCESS_TIMEOUT=30s