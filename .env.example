# Example environment variables for Stori Transaction Processor
# Copy this file to .env and modify values as needed

# Application Configuration
DATA_PATH=./testdata
LOG_LEVEL=info

# Database Configuration (LOCAL DEVELOPMENT ONLY)
# AWS Lambda processes in memory without database
DB_DRIVER=sqlite

# Email Configuration (Required)
TO_ADDRESS=customer@example.com
TO_NAME=Account Holder

# Hybrid Email Mode Configuration
EMAIL_MODE=development  # Options: development (MailHog), gmail (real Gmail)

# MailHog Configuration (development mode)
MAILHOG_HOST=mailhog    # Use 'localhost' if running MailHog standalone
MAILHOG_PORT=1025

# Gmail Configuration (for real email delivery)
GMAIL_HOST=smtp.gmail.com
GMAIL_PORT=587
# Gmail credentials:
# GMAIL_USERNAME=your-email@gmail.com  
# GMAIL_PASSWORD=your-app-password

# General Email Settings
FROM_ADDRESS=noreply@stori.com
FROM_NAME=Stori Account Summary

# SMTP Configuration 
# These are automatically set based on EMAIL_MODE
# SMTP_HOST=
# SMTP_PORT=
# SMTP_USERNAME=
# SMTP_PASSWORD=

# Security Configuration
MAX_FILE_SIZE=10485760
MAX_TRANSACTIONS=100000
MAX_AMOUNT_LIMIT=1000000.00
PROCESS_TIMEOUT=30s